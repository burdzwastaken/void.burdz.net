# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css}]
indent_size = 4
indent_style = space

[*.{js}]
indent_size = 2
indent_style = space

[{Makefile,*.mk}]
indent_style = tab

[*.{md,diff}]
trim_trailing_whitespace = false
